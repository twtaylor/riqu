{
  "compilerOptions": {
      "allowJs": true, 
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/ts/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}

