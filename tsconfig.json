{
  "compilerOptions": {
    "allowJs": true, 
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "outDir": "./server", 
    "target": "es2016",
    "typeRoots": [
      "server/node_modules/@types"
    ]
  },
  "include": [
    "src/*"
  ], 
  "exclude": [
    "node_modules"
  ]
}
